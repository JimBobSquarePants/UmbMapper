@model UmbMapper.Umbraco8.Sample.Models.ViewModels.BasicHeaderViewModel

    <div>
        @if (String.IsNullOrWhiteSpace(Model.ImageUrl) == false)
        {
            <img src="@Model.ImageUrl" />
        }
        <div>
            @if (String.IsNullOrWhiteSpace(Model.Strapline) == false)
            {
                <span>@Model.Strapline</span>
            }
            @if (Model.Link != null)
            {
                <a href="@Model.Link.Url">@Model.Link.Name</a>
            }
        </div>
    </div>
